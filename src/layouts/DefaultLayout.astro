---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { withVersion } from "../utils/version.ts";

const { title, description, robots = "index, follow" } = Astro.props;
const siteOrigin = (Astro.site ? Astro.site : new URL("https://jh-virtuell.ch")).toString();
const currentUrl = Astro.site ? new URL(Astro.url.pathname, Astro.site) : Astro.url;
const ogImage = Astro.site ? new URL("/logo-jh.webp", Astro.site).toString() : "/logo-jh.webp";

// Structured Data
const orgLd = {
  "@context": "https://schema.org",
  "@type": "Organization",
  name: "JH Virtuell KLG",
  url: siteOrigin,
  logo: ogImage,
  address: {
    "@type": "PostalAddress",
    streetAddress: "Chlini Schanz 31",
    postalCode: "8260",
    addressLocality: "Stein am Rhein",
    addressCountry: "CH",
  },
  contactPoint: [{
    "@type": "ContactPoint",
    contactType: "customer support",
    email: "info@jh-virtuell.ch",
    telephone: "+41 78 684 40 17",
    areaServed: "CH",
    availableLanguage: ["de", "en"],
  }],
};

const websiteLd = {
  "@context": "https://schema.org",
  "@type": "WebSite",
  name: "JH Virtuell",
  url: siteOrigin,
  potentialAction: {
    "@type": "SearchAction",
    target: `${siteOrigin}?s={search_term_string}`,
    "query-input": "required name=search_term_string",
  },
};

const webpageLd = {
  "@context": "https://schema.org",
  "@type": "WebPage",
  name: title,
  description,
  url: currentUrl.toString(),
};

const segments = Astro.url.pathname.split("/").filter(Boolean);
const breadcrumbLd = segments.length
  ? {
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      itemListElement: [
        { "@type": "ListItem", position: 1, name: "Start", item: siteOrigin },
        ...segments.map((seg, i) => ({
          "@type": "ListItem",
          position: i + 2,
          name: decodeURIComponent(seg).replace(/-/g, " "),
          item: new URL("/" + segments.slice(0, i + 1).join("/"), siteOrigin).toString(),
        })),
      ],
    }
  : null;

// Tools schema: add SoftwareApplication JSON-LD automatically for all /tools/* pages
const isTools = segments[0] === 'tools';
const toolAppLd = isTools
  ? {
      "@context": "https://schema.org",
      "@type": "SoftwareApplication",
      name: title,
      description,
      applicationCategory: "UtilitiesApplication",
      operatingSystem: "All",
      isAccessibleForFree: true,
      url: currentUrl.toString(),
      offers: { "@type": "Offer", price: "0", priceCurrency: "CHF" },
      creator: { "@type": "Organization", name: "JH Virtuell", url: siteOrigin },
    }
  : null;
---

<!DOCTYPE html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="seobility" content="9e2a071672b2807fff9d7a61447c5130" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="robots" content={robots} />
    <meta name="googlebot" content="max-snippet:-1, max-image-preview:large, max-video-preview:-1" />
    <meta name="theme-color" content="#d4af37" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="author" content="JH Virtuell" />
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:alt" content="JH Virtuell Logo" />
    <meta property="og:type" content="website" />
    <meta property="og:locale" content="de_CH" />
    <meta property="og:site_name" content="JH Virtuell" />
    <meta property="og:url" content={currentUrl.toString()} />
    <link rel="canonical" href={currentUrl.toString()} />

    <!-- Icons & Fonts -->
    <link rel="icon" href="/favicon.ico" sizes="any" />
    <link rel="apple-touch-icon" href="/apple-touchicon.png" />
    <link rel="manifest" href="/manifest.webmanifest" />
    <meta name="mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />
    <!-- Preconnect/DNS prefetch for third-parties to reduce connection latency -->
    <link rel="preconnect" href="https://cloud.umami.is" crossorigin />
    <link rel="dns-prefetch" href="https://cloud.umami.is" />
    <link rel="preload" href="/fonts/Poppins-Regular.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="preload" href="/fonts/Poppins-Bold.woff2" as="font" type="font/woff2" crossorigin />

    <!-- Structured Data: Organization, WebSite, WebPage, Breadcrumbs -->
    <script type="application/ld+json" is:inline set:html={JSON.stringify(orgLd)}></script>
    <script type="application/ld+json" is:inline set:html={JSON.stringify(websiteLd)}></script>
    <script type="application/ld+json" is:inline set:html={JSON.stringify(webpageLd)}></script>
    {breadcrumbLd && (
      <script type="application/ld+json" is:inline set:html={JSON.stringify(breadcrumbLd)}></script>
    )}
    {toolAppLd && (
      <script type="application/ld+json" is:inline set:html={JSON.stringify(toolAppLd)}></script>
    )}

    <!-- DSGVO-konformes Tracking mit Umami -->
    <script
      defer
      src={withVersion("https://cloud.umami.is/script.js")}
      data-website-id="55622a39-8363-47d8-8b91-584811f333d8"
    ></script>
  </head>
  <body class="bg-light text-dark font-sans antialiased">
    <Header />
    <!-- fester Spacer in Header-Höhe, verhindert Weißlücke auf Ultra-Wide -->
    <div aria-hidden="true" class="h-20 md:h-24 bg-dark"></div>

    <main class="min-h-screen">
      <slot />
    </main>
    <Footer />
    <slot name="scripts" is:raw />
    <script is:inline>
      if ('serviceWorker' in navigator) {
        window.addEventListener('load', () => {
          navigator.serviceWorker.register('/sw.js').catch(() => {});
        });
      }
    </script>
  </body>
</html>
